	echo "------------------------------------------------------------- "
	echo -e '\e[36;3m' "Digita:    \e[m";
    echo -e '\e[36;3m' "nano /etc/network/interfaces    \e[m";
	read Minha_Escrita
	Cadena_a_Comparar="nano /etc/network/interfaces"
	Comparar_String
	Arquivo_Interfaces
	if [ "$?" = "0" ] ;then
		echo "Tudo em ordem... VAMOS CONTINUAR ! ! !"
